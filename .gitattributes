# Set default behavior to automatically normalize line endings
* text=auto

# Python files should use LF
*.py text eol=lf

# Batch files must use CRLF (Windows requirement)
*.bat text eol=crlf

# Markdown files use LF
*.md text eol=lf

# Spec files use LF
*.spec text eol=lf

# QML files use LF
*.qml text eol=lf

# JSON files use LF
*.json text eol=lf

# Gitignore and gitattributes use LF
.gitignore text eol=lf
.gitattributes text eol=lf
